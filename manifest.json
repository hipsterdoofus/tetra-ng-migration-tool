/* https://developer.chrome.com/extensions/manifest */
{
    "manifest_version": 2,

    "name": "Tetra -> Next Gen Migration Extension",
    "description": "Tool to assist in migration of content from CDK Tetra sites to Next Gen sites",
    "version": "0.1",
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Next Gen Migration Tool"
    },
    /* TODO: look into pageAction to constrain where scripting shows up - https://developer.chrome.com/extensions/pageAction */
    "background": {
        "scripts": [
            "popup.js"
        ]
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "http://*.cobalt.com/*",
        "http://localhost/*"
        // link to graph service API,
    ],
    "web_accessible_resources": [
        "CDK_Logo_Horiz.png"
    ]
}